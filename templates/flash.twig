{% macro message(type) %}
    {% for msg in flash.get(type) %}
        <div class="alert alert-{{ type }} alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="fas fa-times"></i></button>
            {{ msg }}
        </div>
    {% endfor %}
{% endmacro %}


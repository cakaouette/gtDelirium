{% extends "layout.twig" %}

{% block title %}Alliance{% endblock %}

{% block content %}
<div class="col-md-12">
<div class="card card-info">
  <!-- form start -->
  <form class="form-horizontal" method="post">
    <div class="card-body">
    {% include 'csrf.twig' %}
    <!-- Name -->
      {% if id > 0 %}
      <div class="form-group">
        <input type="hidden"
               name="idForm"
               value="{{ id }}">
      </div>
      {% endif %}
      <div class="form-group">
        <label for="nameFormId">Nom</label></small>
        <input type="text"
               class="form-control form-control-border border-width-2" 
               name="nameForm"
               id="nameFormId"
               placeholder="Nom de la guilde"
               value="{{ name }}">
      </div>
      <div class="form-group">
        <label for="colorFormId">Couleur</label>
        <input type="text"
               class="form-control form-control-border border-width-2" 
               name="colorForm"
               id="colorFormId"
               placeholder="Couleur sur le site">
      </div>
    </div>
      
    <!-- /.card-body -->
    <div class="card-footer">
        <button type="submit" name="saveGuildForm" class="btn btn-info">{{ id > 0 ? 'Sauvegarder' : 'Cr√©er' }}</button>
<!--      <button type="submit" class="btn btn-default float-right">Cancel</button>-->
    <!-- /.card-footer -->
    </div>
  </form>
</div>
</div>
{% endblock %}

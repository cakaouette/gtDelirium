{% extends "layout.twig" %}

{% block title %}Raid{% endblock %}

{% block content %}
<div class="row">
  <div class="col-md-6">
    <h4>Quelques perturbations pour les joueurs suivants</h4>
      <div class="card-body table-responsive p-0">
        <table class="table table-head-fixed table-hover">
          <tr>
            <th>Pseudo</th>
            <th>Nombre d'attaques</th>
          </tr>
          {% for count in meteo| filter(m => m.count < 3) %}
          <tr>
            <td>{{ count.memberName }}</td>
            <td>{{ count.count }}</td>
          </tr>
          {% endfor %}
        </table>
      </div>
  </div>
  <div class="col-md-6">
    <h4>RÃ©cap des scores</h4>
      <div class="card-body table-responsive p-0">
        <table class="table table-head-fixed table-hover">
          <tr>
            <th></th>
            <th>Pseudo</th>
            <th>Attaques</th>
            <th>Totaux</th>
          </tr>
          {% for count in meteo %}
          <tr>
            <td>{{ loop.index }}</td>
            <td>{{ count.memberName }}</td>
            <td>{{ count.count }}/3</td>
            <td align="right">{{ count.dailyDamage | number_format(0, ',', ' ') }}</td>
          </tr>
          {% endfor %}
        </table>
      </div>
  </div>
</div>
{% endblock %}
